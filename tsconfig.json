{
  "compilerOptions": {
    "module": "system",
    "forceConsistentCasingInFileNames": true, // helps with compatibility across OS's
    "importHelpers": true, // helps reduce file output size
    "removeComments": true, // helps reduce file output size
    "strict": true, // helps reduce type errors
    "module": "ES6",
    "target": "ES6",
    // because we're compiling with Babel instead of TypeScript
    // and we're only using TypeScript for type checking, we'll set "noEmit"
    // to true so running type checking doesn't generate any files.
    "noEmit": true,
    "baseUrl": "./src"
  }
}
